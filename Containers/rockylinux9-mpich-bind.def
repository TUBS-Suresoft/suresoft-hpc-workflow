BootStrap: docker
From: rockylinux:9
Stage: build
 
%files
    src src
    CMakeLists.txt CMakeLists.txt

%environment
    export PATH="$MPI_DIR/bin:$PATH"
    export LD_LIBRARY_PATH="$MPI_DIR/lib:$LD_LIBRARY_PATH"

%post
    yum update -y                            && \
    yum group install -y "Development Tools" && \
    yum install -y                              \
    cmake                                    && \
    mpich                                       \
    mpich-devel                                 \
    source /etc/profile.d/modules.sh         && \
    module load mpi                          && \
    mkdir build && cd build && cmake .. && make


BootStrap: docker
From: rockylinux:9
Stage: runtime

%files from build
    build build

%environment
    export PATH="$MPI_DIR/bin:$PATH"
    export LD_LIBRARY_PATH="$MPI_DIR/lib:$LD_LIBRARY_PATH"

%apprun laplace
    /build/bin/laplace